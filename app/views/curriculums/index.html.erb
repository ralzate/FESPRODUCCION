
<% @curriculums.each do |curriculum| %>

  <h1>Mi Curriculum<%= link_to image_tag("pdf.png"), curriculum_path(curriculum, :format => "pdf"), target: '_blank',  :rel => "tooltip", :title => "Pdf", :class => 'btn btn-link' %></h1>

<% end %>

<h2>Datos Personales</h2>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Cedula</th>
      <th>Dirección</th>
      <th>Telefono</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= current_user.id %></td>
      <td><%= current_user.nombre1.capitalize + ' ' + current_user.nombre2.capitalize %></td>
      <td><%= current_user.apellido1.capitalize + ' ' + current_user.apellido2.capitalize %></td>
      <td><%= current_user.cedula %></td>
      <td><%= current_user.direccion %></td>
      <td><%= current_user.telefono %></td>
      <td><%= current_user.email %></td>
    </tr>
  </tbody>
</table>


