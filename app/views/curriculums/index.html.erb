  <thead>
    <tr>
      <th>#</th>
      <th>Empresa</th>
      <th>Cargo</th>
      <th>Telefono</th>
      <th>Fecha Inicio</th>
      <th>Fecha Terminación</th>
    </tr>
  </thead>
  <tbody>
    <% @experiencias_laborales.each do |experiencia_laboral| %>
    <tr>
      <td><%= experiencia_laboral.id %></td>
      <td><%= experiencia_laboral.empresa %></td>
      <td><%= experiencia_laboral.cargo %></td>
      <td><%= experiencia_laboral.telefono %></td>
      <td><%= experiencia_laboral.fecha_inicio %></td>
      <td><%= experiencia_laboral.fecha_terminacion %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>Estudios Complementarios</h2>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Nombre</th>
      <th>Entidad</th>
      <th>Fecha Terminación</th>
      <th>Intensidad Horaria</th>
    </tr>
  </thead>
  <tbody>
    <% @estudios_complementarios.each do |estudio_complementario| %>
    <tr>
      <td><%= experiencia_laboral.id %></td>
      <td><%= experiencia_laboral.empresa %></td>
      <td><%= experiencia_laboral.entidad %></td>
      <td><%= experiencia_laboral.fecha_terminacion %></td>
      <td><%= experiencia_laboral.intensidad_horaria %></td>
    </tr>
    <% end %>
  </tbody>
</table>




<h2>Informaciones Academicas</h2>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Tipo</th>
      <th>Nombre</th>
      <th>Fecha Terminación</th>
      <th>Titulo Obtenido</th>
    </tr>
  </thead>
  <tbody>
    <% @informaciones_academicas.each do |informacion_academica| %>
    <tr>
      <td><%= informacion_academica.id %></td>
      <td><%= informacion_academica.tipo_de_dato %></td>
      <td><%= informacion_academica.nombre %></td>
      <td><%= informacion_academica.fecha_terminacion %></td>
      <td><%= informacion_academica.titulo_obtenido %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<h2>Referencias Personales</h2>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Nombre</th>
      <th>Telefono</th>
      <th>Profesión</th>
    </tr>
  </thead>
  <tbody>
    <% @referencias_personales.each do |referencias_personales| %>
